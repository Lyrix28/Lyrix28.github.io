<Page
    x:Class="Lab1.NewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="Edit Item" FontSize="72"/>
        <ScrollViewer Grid.Column="1" Height="500" MinWidth="10" MinHeight="10">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image x:ConnectionId='1' x:Name="image" Grid.Row="0" Width ="300" Height="150" VerticalAlignment="Center" Source="Assets/Happy New Year 2018.jpg"/>
                <Button x:ConnectionId='2'                    Grid.Row="1" Content="S" Margin="0,0,130,0" HorizontalAlignment="Right" MinWidth="40" MinHeight="20" MaxWidth="40" MaxHeight="24" FontSize="10"/>
                <TextBlock Grid.Row="2" Style="{StaticResource header}" Margin="80,0,0,0" Text="Title" MinWidth="60" MaxWidth="60"/>
                <TextBox x:ConnectionId='3' x:Name="title" Grid.Row="3" Margin="90,0,90,0" HorizontalAlignment="Left" MinWidth="400" MinHeight="40"/>
                <TextBlock Grid.Row="4" Text="Detail" Style="{StaticResource header}" Margin="80,0,0,0" MaxWidth="82" MinWidth="82"/>
                <TextBox x:ConnectionId='4' x:Name="detail" Grid.Row="5" Margin="90,0,90,0" HorizontalAlignment="Left" MinWidth="400" MinHeight="150"/>
                <TextBlock Grid.Row="6" Text="Due Date" Style="{StaticResource header}" Margin="80,0,0,0" MaxWidth="133" MinWidth="133"/>
                <DatePicker x:ConnectionId='5' x:Name="datepicker" Margin="90,0,90,0" Grid.Row="7" HorizontalAlignment="Left" FontSize="22" MaxHeight="42" MinWidth="400" MaxWidth="500"/>
                <Button x:ConnectionId='6' x:Name="create" Margin="80,15,80,0" Grid.Row="8" Content="Create" HorizontalAlignment="Left" MaxWidth="68" MaxHeight="32"                     Width="68"/>
                <Button x:ConnectionId='7' x:Name="cancel" Margin="80,15,80,0" Grid.Row="8" Content="Cancel" HorizontalAlignment="Right" MaxWidth="66" MaxHeight="32"                     Width="68"/>
            </Grid>
        </ScrollViewer>
    </StackPanel>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='8' x:Name="DeleteAppBarButtuon" Icon="Delete" Label="Delete"                     />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

